# تنظیمات لوکال (این فایل را به ".env" کپی کنید)
#
# برای ارسال ایمیل واقعی روی لوکال (مثلاً Gmail SMTP)، این مقادیر را پر کنید.
# نکته مهم: PASSWORD را داخل گیت کامیت نکنید (فایل .env در .gitignore است).
#
# Gmail SMTP (نیازمند App Password)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=استیرا <your_email@gmail.com>

# Branding / Invoice (optional)
SITE_NAME=استیرا
# If you need multiple lines, use \n between lines.
COMPANY_ADDRESS=آدرس شرکت (مثال: تهران، ... \n تلفن/پلاک/واحد ...)
COMPANY_PHONE=
COMPANY_EMAIL=

# Optional: base URL for building links in emails (admin digest)
SITE_BASE_URL=https://example.com

# Receipt maintenance (default: 2 hours = 7200 seconds)
RECEIPT_PURGE_DELAY_SECONDS=7200

# Authentication security (login brute-force protection)
AUTH_SECURITY_LOGIN_PATHS=/login/,/admin/login/
# Only enable if behind a trusted reverse proxy that sets X-Forwarded-For safely.
AUTH_SECURITY_TRUST_X_FORWARDED_FOR=false
AUTH_SECURITY_LOGIN_IP_MAX_ATTEMPTS=10
AUTH_SECURITY_LOGIN_IP_WINDOW_SECONDS=600
# If set, IPs are blocked (cooldown) after this many failures in the window.
AUTH_SECURITY_LOGIN_IP_BLOCK_AFTER_ATTEMPTS=10
AUTH_SECURITY_IP_BLOCK_SECONDS=1800
AUTH_SECURITY_LOGIN_IDENTIFIER_MAX_ATTEMPTS=5
AUTH_SECURITY_LOGIN_IDENTIFIER_WINDOW_SECONDS=600

# SMS backend (provider later)
SMS_BACKEND=console
# KAVENEGAR_API_KEY=
# KAVENEGAR_SENDER=

# SMS OTP defaults
SMS_OTP_LENGTH=6
SMS_OTP_TTL_SECONDS=300
SMS_OTP_RESEND_COOLDOWN_SECONDS=60
SMS_OTP_MAX_SEND_PER_WINDOW=3
SMS_OTP_SEND_WINDOW_SECONDS=600
SMS_OTP_MAX_VERIFY_ATTEMPTS=5

